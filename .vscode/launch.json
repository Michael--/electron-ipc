{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/test-app",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [".", "--remote-debugging-port=9223"],
      "outputCapture": "std",
      "preLaunchTask": "npm: build - packages/test-app"
    },
    {
      "name": "Debug Renderer Process",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}/packages/test-app",
      "timeout": 30000
    },
    {
      "name": "Debug All (Main + Renderer)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/test-app",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [".", "--remote-debugging-port=9223"],
      "outputCapture": "std",
      "preLaunchTask": "npm: build - packages/test-app",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "Debugger listening on ws://([0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+):([0-9]+)",
        "uriFormat": "ws://%s:%s",
        "webRoot": "${workspaceFolder}/packages/test-app"
      }
    },
    {
      "name": "Run Test App (Dev Mode)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/test-app",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev"],
      "outputCapture": "std",
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Debug Main + Renderer",
      "configurations": ["Debug Main Process", "Debug Renderer Process"],
      "presentation": {
        "hidden": false,
        "group": "electron",
        "order": 1
      }
    }
  ]
}
