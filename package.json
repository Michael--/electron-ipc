{
  "name": "electron-ipc-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for electron-ipc library and test application",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "dev": "npm run dev -w packages/test-app",
    "dev:lib": "npm run watch -w packages/electron-ipc",
    "postinstall": "npm run build --workspaces --if-present"
  },
  "keywords": [
    "electron",
    "ipc",
    "typescript",
    "generator"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
