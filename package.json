{
  "name": "electron-ipc-workspace",
  "version": "2.2.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for electron-ipc library and test application",
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "build": "pnpm -r --filter electron-ipc run build && pnpm install && pnpm -r run build",
    "clean": "pnpm -r run clean",
    "test": "pnpm -r run test",
    "test:e2e": "pnpm --filter electron-ipc-test-app run build && pnpm --filter electron-ipc-test-app exec playwright test --reporter=line",
    "test:integration": "pnpm --filter electron-ipc run test",
    "lint": "pnpm -r run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "pnpm --filter test-app run dev",
    "dev:multi-window": "pnpm --filter electron-ipc-multi-window run dev",
    "dev:lib": "pnpm --filter electron-ipc run dev",
    "typecheck": "pnpm -r run typecheck",
    "spell": "cspell \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky",
    "pre-commit": "pnpm exec lint-staged",
    "pack-electron-ipc": "pnpm --filter electron-ipc pack",
    "ci": "pnpm run clean && pnpm run build && pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run test:e2e"
  },
  "keywords": [
    "electron",
    "ipc",
    "typescript",
    "generator"
  ],
  "author": "Michael Rieck (Michael--) <mr@number10.de>",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "cspell": "^9.6.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
