{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@gen/*": ["./dist/*"]
    }
  },
  "include": ["src/**/*", "public/**/*", "dist/**/*"],
  "exclude": ["node_modules", "dist", "out"]
}
