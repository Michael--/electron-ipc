{
  "name": "@number10/electron-ipc",
  "version": "2.1.0",
  "description": "TypeScript code generator for type-safe Electron IPC communication",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@9",
  "bin": {
    "electron-ipc-generate": "dist/bin/generate-api.js"
  },
  "files": [
    "dist",
    "assets",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./window-manager": {
      "types": "./dist/window-manager/index.d.ts",
      "import": "./dist/window-manager/index.mjs",
      "require": "./dist/window-manager/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "vite build && shx chmod +x dist/bin/generate-api.js",
    "dev": "vite build --watch",
    "clean": "rimraf dist *.tsbuildinfo",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "keywords": [
    "electron",
    "ipc",
    "typescript",
    "generator",
    "type-safe",
    "code-generation"
  ],
  "author": "Michael Rieck (Michael--) <mr@number10.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Michael--/electron-ipc.git",
    "directory": "packages/electron-ipc"
  },
  "bugs": {
    "url": "https://github.com/Michael--/electron-ipc/issues"
  },
  "homepage": "https://github.com/Michael--/electron-ipc#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.0.4",
    "rimraf": "^5.0.5",
    "shx": "^0.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "electron": ">=28.0.0"
  },
  "peerDependenciesMeta": {
    "electron": {
      "optional": true
    }
  },
  "dependencies": {
    "colors": "^1.4.0",
    "ts-morph": "^27.0.2",
    "yaml": "^2.4.1"
  }
}
